package ua;

import ua.model.*;
import java.util.List;
import java.util.Date;

public class Main {
    public static void main(String[] args) {
        Driver driver1 = new Driver();
        driver1.setFirstName("Олег");
        driver1.setLastName("Коваленко");
        driver1.setLicenseNumber("AB123456");
        driver1.setExperienceYears(8);
        System.out.println("Driver First Name: " + driver1.getFirstName());
        System.out.println("Driver Last Name: " + driver1.getLastName());
        System.out.println("Driver Full Name: " + driver1.getFullName());
        System.out.println("Driver License: " + driver1.getLicenseNumber());
        System.out.println("Driver Experience: " + driver1.getExperienceYears());

        Driver driver2 = Driver.createDriver("Марія", "Шевченко", "BC654321", 5);
        System.out.println("Created Driver: " + driver2);
        System.out.println(driver1.equals(driver2));

        Car car1 = new Car();
        car1.setBrand("Toyota");
        car1.setModel("Corolla");
        car1.setPlateNumber("AA1234BB");
        car1.setDriver(driver1);
        System.out.println("Car Brand: " + car1.getBrand());
        System.out.println("Car Model: " + car1.getModel());
        System.out.println("Car Plate: " + car1.getPlateNumber());
        System.out.println("Car Driver: " + car1.getDriver().getFullName());

        Car car2 = Car.createCar("Honda", "Civic", "KA5678BI", driver2);
        System.out.println("Created Car: " + car2);

        Route route1 = new Route("Київ", "Львів", 540.5);
        System.out.println("Route Start: " + route1.startPoint());
        System.out.println("Route End: " + route1.endPoint());
        System.out.println("Route Distance: " + route1.distance());
        Route route2 = Route.createRoute("Одеса", "Харків", 725.2);
        System.out.println("Created Route: " + route2);

        Trip trip1 = new Trip();
        trip1.setDate(new Date());
        trip1.setCar(car1);
        trip1.setRoute(route1);
        trip1.setDurationHours(7);
        System.out.println("Trip Date: " + trip1.getDate());
        System.out.println("Trip Car: " + trip1.getCar());
        System.out.println("Trip Route: " + trip1.getRoute());
        System.out.println("Trip Duration: " + trip1.getDurationHours());

        Trip trip2 = Trip.createTrip(new Date(), car2, route2, 9);
        System.out.println("Created Trip: " + trip2);

        Accident accident1 = new Accident();
        accident1.setDate(new Date());
        accident1.setPlace("Рівне");
        accident1.setCar(car1);
        accident1.setSeverity(Severity.MEDIUM);
        System.out.println("Accident Date: " + accident1.getDate());
        System.out.println("Accident Place: " + accident1.getPlace());
        System.out.println("Accident Car: " + accident1.getCar());
        System.out.println("Accident Severity: " + accident1.getSeverity());

        Accident accident2 = Accident.createAccident(new Date(), "Черкаси", car2, Severity.LOW);
        System.out.println("Created Accident: " + accident2);

        List<Trip> trips = List.of(trip1, trip2);
        List<Accident> accidents = List.of(accident1, accident2);

        Report report1 = new Report();
        report1.setDriver(driver1);
        report1.setTrips(trips);
        report1.setAccidents(accidents);
        report1.setGeneratedDate(new Date());
        System.out.println("Report Driver: " + report1.getDriver().getFullName());
        System.out.println("Report Trips: " + report1.getTrips());
        System.out.println("Report Accidents: " + report1.getAccidents());
        System.out.println("Report Date: " + report1.getGeneratedDate());

        Report report2 = Report.createReport(driver2, trips, accidents, new Date());
        System.out.println("Created Report: " + report2);
    }
}
